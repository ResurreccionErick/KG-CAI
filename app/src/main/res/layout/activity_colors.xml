<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ColorsActivity">

    <RelativeLayout
        android:id="@+id/colorBg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/color_detail"
        android:padding="20dp">

        <ImageView
            android:id="@+id/menu_nav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_btn_logo"/>

        <RelativeLayout
            android:layout_below="@id/menu_nav"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/color_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/londrina_solid"
                android:text="COLOR"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="100sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_color"/>

    </LinearLayout>

</LinearLayout>